<Window x:Class="coursework.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:wm="clr-namespace:coursework.ViewModels"
        xmlns:comp="clr-namespace:coursework.Componets"
        mc:Ignorable="d" 
        prism:ViewModelLocator.AutoWireViewModel="True"
        d:DataContext="{d:DesignInstance wm:MainWindowViewModel}"
        Background="Transparent"
        Title="{Binding Title, FallbackValue='hello'}" Height="400" Width="600" >
    <DockPanel>
        <StatusBar DockPanel.Dock="Bottom" Height="22">
            <StatusBarItem>
                <TextBlock Text="{Binding DatabaseConnectionStatus, FallbackValue='Нет подключения к БД'}" />
            </StatusBarItem>
        </StatusBar>
        <!--<Frame x:Name="MainFrame" />-->
        <ContentControl Grid.Row="1" x:Name="contentControl"/>
            <!--<comp:Autorization DockPanel.Dock="Top"/>-->
    </DockPanel>
    
</Window>
