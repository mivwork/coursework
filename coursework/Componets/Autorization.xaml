<UserControl x:Class="coursework.Componets.Autorization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:coursework.Componets"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="200">

    <StackPanel Grid.Row="1" Grid.Column="1">
        <StackPanel.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="Foreground" Value="white"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Margin" Value="1 0"/>
            </Style>
        </StackPanel.Resources>
        <TextBlock Text="Welcome" Height="64" FontSize="36"/>
        <TextBlock Text="Login"/>
        <TextBox x:Name="LoginTextBox" Grid.Row="0" Margin="0" />
        <TextBlock Text="Password"/>
        <PasswordBox x:Name="PasswordBox" Margin="0" />
        <Button x:Name="LoginButton" Content="Login" Width="100" Background="LightGreen" Margin="10"/>

    </StackPanel>
</UserControl>
