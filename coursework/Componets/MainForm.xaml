<UserControl x:Class="coursework.Componets.MainForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:coursework.Componets"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Background="#FF0014CF">
            <StackPanel VerticalAlignment="Top" Height="73" Margin="0,100,0,0">
                <Button x:Name="TableButton" Content="Товар" Height="35" Background="#FF0014CF" BorderBrush="Gray"  Foreground="White" Click="TableButton_Click"/>
                <Button x:Name="UserButton" Content="Пользователь" Height="35" Background="#FF0014CF" BorderBrush="Gray"  Foreground="White" Click="UserButton_Click"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Column="1" Background="White">
            <ContentControl Grid.Row="1" x:Name="contentControl"/>
        </Grid>
    </Grid>
</UserControl>
